.front {
  position: absolute;
  top: 0;
  left: 0;
  backface-visibility: hidden;
  transition: all 0.5s ease;
  width: 700rpx;
  height: 340rpx;
  padding: 24px;
  border: 2px solid #999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.front p,
.back p {
  font-weight: 700;
}

.front img {
  width: 60%;
}

.magicCard ul {
  list-style-type: none;
  line-height: 1.6;
  padding-inline-start: 0;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.canvas-container {
  width: 700rpx;
  height: 440rpx;
}

.adContainer {
  width: 100%;
}