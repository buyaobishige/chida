/* stallList/stallList.wxss */
.box {
  width: 700rpx;
  height: 340rpx;
  margin: 16px;
  perspective: 1000px;
}

.backicon {
  width: 56px;
}

.relative-box {
  transform-style: preserve-3d;
  position: relative;
}

.flex-box {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-content: space-around;
  max-width: 908px;
}

.flex-box .head {
  font-size: 20px;
}

.back {
  border: 4px solid #999;
  transform: rotateY(180deg);
  position: absolute;
  top: 0;
  left: 0;
  width: 700rpx;
  height: 340rpx;
  padding: 24px;
  border: 4px solid #999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  backface-visibility: hidden;
  transition: all 0.5s ease;
}

.box .backActive {
  transform: rotateY(360deg);
  transition: all 0.5s ease;
}

.box .frontActive {
  transform: rotateY(180deg);
  transition: all 0.5s ease;
}

.hide canvas {
  display: none;
}

