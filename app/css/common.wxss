/* 按钮点击样式 */
.button-hover {
  background-color: var(--hover) !important;
  color: inherit;
  opacity: 0.7 !important;
}

.icon-button {
  width: 24px;
  height: 24px;
  background-color: transparent;
  background-position: 50% 50%;
  border: 0;

  font-size: 0;

  background-repeat: no-repeat;
  background-size: 100%;
  outline: 0;
}

